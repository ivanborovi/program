<?xml version="1.0" encoding="UTF-8"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema">

	<!-- TODO: Dopolni manjkajoče tipe in elemente -->

	<!-- TODO: dodaj tip za ID študenta, ki naj bo v obliki ST + 3 števke (npr. ST001, ST123) -->
	<xs:simpleType name="StudentIdType">
		<xs:restriction base="xs:string">
			<xs:pattern value="ST[0-9]{3}"/>
		</xs:restriction>
	</xs:simpleType>

	<!-- TODO: dodaj tip za ID predmeta, ki naj bo v obliki PR + 2 števki (npr. PR01, PR02) -->
	<xs:simpleType name="PredmetIdType">
		<xs:restriction base="xs:string">
			<xs:pattern value="PR[0-9]{2}"/>
		</xs:restriction>
	</xs:simpleType>

	<!-- TODO: dodaj omejen nabor vrednosti za LetnikType (torej letnik je lahko med 1 - 3) -->
	<xs:simpleType name="LetnikType">
		<xs:restriction base="xs:integer">
			<xs:minInclusive value="1"/>
			<xs:maxInclusive value="3"/>
		</xs:restriction>
	</xs:simpleType>

	<!-- TODO: dodaj omejen nabor vrednosti za obvezen (da/ne) -->
	<xs:simpleType name="ObvezenEnum">
		<xs:restriction base="xs:string">
			<xs:enumeration value="da"/>
			<xs:enumeration value="ne"/>
		</xs:restriction>
	</xs:simpleType>

	<!-- TODO: povprečje naj bo omejeno na le 1 decimalko ter ima vrednosti med 6.0 in 10.0 -->
	<xs:simpleType name="PovprecjeType">
		<xs:restriction base="xs:decimal">
			<xs:minInclusive value="6.0"/>
			<xs:maxInclusive value="10.0"/>
			<xs:fractionDigits value="1"/>
		</xs:restriction>
	</xs:simpleType>


	<xs:element name="studenti">
		<xs:complexType>
			<xs:sequence>
				<xs:element name="student" minOccurs="0" maxOccurs="unbounded">
					<xs:complexType>
						<xs:sequence>
							<xs:element name="ime" type="xs:string"/>
							<xs:element name="priimek" type="xs:string"/>
							<xs:element name="povprecje" type="PovprecjeType"/>
							<xs:element name="predmetRef" minOccurs="0" maxOccurs="unbounded">
								<xs:complexType>
									<xs:attribute name="ref" type="xs:string" use="required"/>
								</xs:complexType>
							</xs:element>
						</xs:sequence>
						<xs:attribute name="id" type="StudentIdType" use="required"/>
						<xs:attribute name="stopnja" use="required">
							<xs:simpleType>
								<xs:restriction base="xs:string">
									<xs:enumeration value="VS"/>
									<xs:enumeration value="MAG"/>
								</xs:restriction>
							</xs:simpleType>
						</xs:attribute>
						<xs:attribute name="letnik" type="LetnikType" use="required"/>
						<xs:attribute name="status" use="optional">
							<xs:simpleType>
								<xs:restriction base="xs:string">
									<xs:enumeration value="redni"/>
									<xs:enumeration value="izredni"/>
								</xs:restriction>
							</xs:simpleType>
						</xs:attribute>
					</xs:complexType>
				</xs:element>
			</xs:sequence>
			<xs:attribute name="fakulteta" type="xs:string" use="optional"/>
		</xs:complexType>
	</xs:element>

	<!-- TODO: dodaj definicijo za <predmeti> in kompleksni tip za <predmet>,
       z atributoma id (xs:ID) in obvezen (ObvezenEnum) ter elementi naziv, ECTS, nosilec -->
	<xs:element name="predmeti">
		<xs:complexType>
			<xs:sequence>
				<xs:element name="predmet" minOccurs="0" maxOccurs="unbounded">
					<xs:complexType>
						<xs:sequence>
							<xs:element name="naziv" type="xs:string"/>
							<xs:element name="ECTS" type="xs:integer"/>
							<xs:element name="nosilec" type="xs:string"/>
						</xs:sequence>
						<xs:attribute name="id" type="PredmetIdType" use="required"/>
						<xs:attribute name="obvezen" type="ObvezenEnum" use="required"/>
						<xs:attribute name="stopnja" use="optional">
							<xs:simpleType>
								<xs:restriction base="xs:string">
									<xs:enumeration value="VS"/>
									<xs:enumeration value="MAG"/>
								</xs:restriction>
							</xs:simpleType>
						</xs:attribute>
					</xs:complexType>
				</xs:element>
			</xs:sequence>
		</xs:complexType>
	</xs:element>
</xs:schema>
