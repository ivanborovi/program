using Fonet;
using System.Xml;

namespace Preverjanje2c.src.Services;

public class PdfService
{
    public void GeneratePdfFromFo(string foPath, string pdfPath)
    {
        if (!File.Exists(foPath))
        {
            throw new FileNotFoundException($"FO datoteka ne obstaja: {foPath}");
        }

        using (var foStream = new FileStream(foPath, FileMode.Open, FileAccess.Read))
        using (var pdfStream = new FileStream(pdfPath, FileMode.Create))
        {
            FonetDriver driver = FonetDriver.Make();
            driver.Render(foStream, pdfStream);
        }

        Console.WriteLine($"PDF : {pdfPath}");
    }
}
