using System.Xml;
using System.Xml.Schema;

namespace Preverjanje2c.src.Services;

public class ValidationService
{
    private bool _isValid = true;
    private List<string> _validationErrors = new List<string>();

    public bool Validate(string xmlPath, string xsdPath)
    {
        _isValid = true;
        _validationErrors.Clear();

        try
        {
            XmlReaderSettings settings = new XmlReaderSettings();
            settings.Schemas.Add(null, xsdPath);
            settings.ValidationType = ValidationType.Schema;
            settings.ValidationEventHandler += ValidationEventHandler;

            using (XmlReader reader = XmlReader.Create(xmlPath, settings))
            {
                while (reader.Read())
                {
                }
            }

            if (!_isValid)
            {
                Console.WriteLine("Validacijske napake:");
                foreach (var error in _validationErrors)
                {
                    Console.WriteLine($"  - {error}");
                }
            }

            return _isValid;
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Napaka pri validaciji: {ex.Message}");
            return false;
        }
    }

    private void ValidationEventHandler(object sender, ValidationEventArgs e)
    {
        if (e.Severity == XmlSeverityType.Error)
        {
            _isValid = false;
            _validationErrors.Add(e.Message);
        }
        else if (e.Severity == XmlSeverityType.Warning)
        {
            Console.WriteLine($"Opozorilo: {e.Message}");
        }
    }
}
